<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
  <link rel="stylesheet" type="text/css" href="../sign up.css">
  <link rel = "stylesheet" href = "https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.css">
  <script src = "https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.js"></script>
</head>
<body>
  <script>

    <% if(flash.success && flash.success.length > 0) { %>
        new Noty({
            theme: 'metroui',
            text: "<%= flash.success %>",
            type:  'success',
            layout:  'topRight',
            timeout : 1500

        }).show();
        <% } %>
        <% if(flash.error && flash.error.length > 0) { %>
        new Noty({
            theme: 'metroui',
            text: "<%= flash.error %>",
            type:  'error',
            layout:  'topRight',
            timeout : 2000

        }).show();
        <% } %>

    </script>
 <nav class="navbar navbar-light">
  <h1 class="text-center animate bounce">UPDATE PROFILE  </h1>
  <a href="accinfo">
    <button>
       <div id="sign-out">
         <i id="sign" class="far fa-hand-point-left"></i> <b> BACK</b>
       </div>
    </button> 
    </a>
</nav>
   
<br><br><br>
     <hr>
     
     <form class="needs-validation" id="sign" method="POST" action="/change-password/<%=account._id%>">
      <br>
        <div class="form-group col-lg-6 form-row">
            <div class="col-xl-12 col-md-6 space">
                <label> Current Password</label>
                <input type="Password" name="c_password" class="form-control" placeholder="Enter Password" required >
               </div>


            <div class="col-xl-12 col-md-6 space">
                <label>New Password</label>
                <input type="Password" name="password" class="form-control" placeholder="Enter Password" required >
               </div>
               <div class="col-xl-12 col-md-6 space">
                <label>Confirm Password</label>
                <input type="Password" name="confirm_password" class="form-control" placeholder="Re-enter Password" >
           
     
      <br><br>
        <div class="col-lg-6"  id="button" style="text-align: center;">
           <button class="btn-primary text-center" style="margin-left: 280px;">Submit</button>
         </div>
         <br><br></div></form>
    <div id="kart" style="top: 5%; left: 130%;"><img src="../../cart.png">
      <h2>LOGO</h2></div>
     </form>
</body>
</html>