        </div>

        <div id="kart"><img src="kart.png" style="height: 40px; width: 40px;">

        </div>

        <nav class="navbar navbar-expand-lg navbar-light">
            <a class="navbar-brand" name="top"><h4>BUY/SELL WITH IMMENSE</h4></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
          
            <div class="collapse navbar-collapse " id="navbarSupportedContent">
              <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                  <a class="nav-link" id="addProduct" href="addproduct"> <h5>Add Product</h5><span class="sr-only">(current)</span></a>
                </li>
             
            
              </ul>
              <a href="/sign-out">
                <button class="primary">
                   <div id="sign-out">
                     <i  class="fa fa-power-off"></i><b>  Sign-Out</b>
                   </div>
                </button> 
                
                 </a>
            </div>
          </nav>
          
          <div id="top-div">
              
                <a href="home">
                    <span id="nav-top">TOP</span>
                </a>
            
            
          </div>
       

        <!-- MAIN DIV STARTS -->
        <div id="main_div">

            <%  if(locals.account){ %>
           
            <br><br>
           
            <div id="yproduct">
