</head>

<body>
    <script>

        <% if(flash.success && flash.success.length > 0) { %>
            new Noty({
                theme: 'metroui',
                text: "<%= flash.success %>",
                type:  'success',
                layout:  'topRight',
                timeout : 1500

            }).show();
            <% } %>
            <% if(flash.error && flash.error.length > 0) { %>
            new Noty({
                theme: 'metroui',
                text: "<%= flash.error %>",
                type:  'error',
                layout:  'topRight',
                timeout : 2000

            }).show();
            <% } %>

        </script>
    <div id="topdiv">
        <div class="col-2" id="td2">
            ImmenseDeal
        </div>

        <div class="col-5 td" id="td3">
            <form>
                <input type="search" name="message" value="search" style="width: 80%;">
                <input type="submit" name="se" style="width: 15%; font-size: 90%;"value="search">
            </form>
        </div>

        <div id="td35" class="col-xl-2 col-lg-3 col-md-1 col-sm-3 td"></div>

        <div class="col-xl-1 col-lg col-sm-2 td" id="td4" style="text-align: right;">
            categories
        </div>

        <div id="signin" class="col-xl-1 col-lg col-sm-2 td" style="text-align: center">
            <i id="sign" class="far fa-user"></i>
            <% if(typeof(account) == 'undefined'){%>
                <a href="signin" style="text-decoration: none; color: #393f4d;">  SignIn  </a>
            <% }else{ %>
                    <a href="accinfo"><span style="text-decoration: none; color: #393f4d;"><%= account.name %></span>
             <% } %>
         </div>
         
       <a href="cart">
      	<div id="kart-pop" class="col-xl-1 col-lg col-sm-2td">
     	  	<img src="cart.png" id="cart">
     	  </div>
        </a>
        </div>


        <div>
            <img id="fb" src="fb.png" style="height: 50px; width: 50px;">
        </div>

        <div>
